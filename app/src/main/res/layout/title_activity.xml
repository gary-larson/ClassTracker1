<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#9A000B">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/apsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:layout_marginTop="7dp"/>

        <TextView
            android:text="@string/class_locator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35sp"
            android:textColor="#ffffff"
            android:layout_marginBottom="7dp"/>

        <Button
            android:text="@string/to_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/map_button"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        <Button
            android:text="@string/save_current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/saveLocation_button"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        <Button
            android:text="@string/look_up_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lookupClass_button"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        <Button
            android:text="@string/look_up_saved_locations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lookupLocations_button"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        <Button
            android:text="@string/set_class_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:background="#ffffff"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:text="@string/go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="55sp"
            android:textColor="#ffffff"
            android:layout_marginTop="7dp"/>

        <TextView
            android:text="@string/govs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="60sp"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>